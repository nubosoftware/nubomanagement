Summary: nubomanagement service
Name: nubomanagement-serv-node_modules
Version: %{_version}
Release: %{_release}
Group: System Environment/Daemons
BuildArch: x86_64
License: none
AutoReqProv: no
Requires: nodejs >= 4.4.5, nubomanagement-serv-js
BuildRequires: /usr/bin/pathfix.py

%description
nubo management web service that run in internal network

#%prep
#%setup -q
#%patch -p1 -b .buildroot

%build
#make -C $NUBO_PROJ_PATH clean
#make -C $NUBO_PROJ_PATH

%install
rm -rf $RPM_BUILD_ROOT
mkdir -p $RPM_BUILD_ROOT/opt/nubomanagement

install -m 644 $NUBO_PROJ_PATH/nubomanagement/package.json $RPM_BUILD_ROOT/opt/nubomanagement/package.json

cd $RPM_BUILD_ROOT/opt/nubomanagement/
npm install --only=prod
rm $RPM_BUILD_ROOT/opt/nubomanagement/{package.json,package-lock.json} ||:
find $RPM_BUILD_ROOT/opt/nubomanagement/node_modules -type f -exec sed "s?$RPM_BUILD_ROOT?/?g" -i {} \;
pathfix.py -i /usr/bin/python2 -pn $RPM_BUILD_ROOT/opt/nubomanagement/node_modules

%post

%preun

%postun

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)

/opt/nubomanagement/node_modules

